local gamelist = {
    kaibu = 8487916239
}



if ( game.PlaceId == gamelist.kaibu ) then
    local Material = loadstring(game:HttpGet("https://raw.githubusercontent.com/Kinlei/MaterialLua/master/Module.lua"))()
    local UI = Material.Load({
        Title = "Demon Slayer: Kaibutsu | Nix Hub Premium",
        Style = 3,
        SizeX = 500,
        SizeY = 400,
        Theme = "Aqua"
   })



   local main = UI.New({
       Title = "Functions"
   })
   local chr = UI.New({
       Title = "Character"
   })
   local tps = UI.New({
       Title = "Teleports"
   })
   local Farms = UI.New({
       Title = "Farm"
   })
   
    main.Button({
        Text = "Be Slayer",
        Callback = function()
            -- Script generated by SimpleSpy - credits to exx#9394

            local args = {
                [1] = "Slayer"
            }

        game:GetService("ReplicatedStorage").Remotes.ChangeAlignment:FireServer(unpack(args))
        end,
        Menu = {
            Information = function(self)
                UI.Banner({
                    Text = "Turns you into a slayer!"
                })
            end,
        }   
    })
    

    main.Button({
        Text = "Buy Nichirin",
        Callback = function()
            -- Script generated by SimpleSpy - credits to exx#9394

            local args = {
                [1] = "Nichirin Katana"
            }

            game:GetService("ReplicatedStorage").Remotes.PurchaseItem:FireServer(unpack(args))
        end,
        Menu = {
            Information = function(self)
                UI.Banner({
                    Text = "Buys Nichirin Katana!"
                })
            end,
        }

    })
    

       

   chr.Slider({
       Text = "Walk Speed(Run for it to work!)",
       Callback = function(value)
        game.Players.LocalPlayer.Character.BaseSpeed.Value = value
       end,
       Min = 16,
       Max = 400,
       Def = 16,
       
       
   })


   chr.Slider({
       Text = "Run Speed",
       Callback = function(value)
        game.Players.LocalPlayer.Character.RunSpeed.Value = value
       end,
       Min = 16,
       Max = 400,
       Def = 16
    })


   main.Toggle({
       Text = "Unlock Chat",
       Callback = function(value)
        game:GetService("Players").LocalPlayer.PlayerGui.Chat.Frame.ChatChannelParentFrame.Visible = value
       end,
       Enabled = false,
      
   })


   Farm.Toggle({
       Title = "Auto-Farm Demon",
       Callback = function(active)
        getgenv().farm = active
        while wait() do
            if not getgenv().farm then break end
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = game:GetService("Workspace").LivingThings:FindFirstChild("Demon").Torso.CFrame


        end
        end,
        Enabled = false
        

   })

   
   main.Button({
       Title = "ServerHop",
       Callback = function()
        local function ServerHop()
            while wait() do
                local Servers = game.HttpService:JSONDecode(game:HttpGet('https://games.roblox.com/v1/games/' .. game.PlaceId .. '/servers/Public?sortOrder=Asc&limit=100'))
                for i,v in pairs(Servers.data) do
                    if v.id ~= game.JobId then
                        wait()
                        game:GetService('TeleportService'):TeleportToPlaceInstance(game.PlaceId, v.id)
                    end
                end
            end
        end
        
        getgenv().serverhop = ServerHop

        if syn then
            syn.queue_on_teleport("loadstring(game:HttpGet('https://raw.githubusercontent.com/LeadMarker/Scripts/main/DemonfallMoneyfarm.lua'))()")
            end
    end,
   })


end
